<div id="wrapper" class='row'>
    <div class='col-md-6 mx-auto w-100 my-auto'>
      <div class="text-center" id='login-wrapper'>
      <%= image_tag('snap.png', class:'logoLogin') %>
        <h4 class='welcome'>WELCOME</h4>
        <h5 class='loginHeader'>please login to your account</h5>
        <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="input-group mb-3">
          <div class="input-group-prepend">
            <span class="input-group-text" id="basic-addon1"><i class="fa fa-envelope"></i></span>
          </div>
          <%= f.email_field :email, autofocus: true, class: 'form-control', 'aria-describedby' => "basic-addon1",placeholder: "login@example.com",autocomplete: "email" %>
        </div>
        <div class="input-group mb-3">
          <div class="input-group-prepend">
            <span class="input-group-text pr-3" id="password-addon"><i class="fa fa-lg fa-lock"></i></span>
          </div>
          <%= f.password_field :password, autofocus: true, class: 'form-control','aria-describedby' => "password-addon", placeholder: "Enter your password",autocomplete: "current-password" %>
        </div>

        <% if devise_mapping.rememberable? %>
        <div class="field">
          <%= f.check_box :remember_me %>
          <%= f.label :remember_me %>
        </div>
        <% end %>

        <div class="actions text-center row">
          <%= f.submit "Log in", class:'btn btn-block btn-facebook loginButton col-md-5' %>
          <%- if devise_mapping.omniauthable? %>
            <%- resource_class.omniauth_providers.each do |provider| %>
            <%= link_to "Sign in with #{OmniAuth::Utils.camelize(provider)}", omniauth_authorize_path(resource_name, provider),class:'btn btn-block btn-facebook text-center col-md-5' %>
          <% end %>
          <% end %>
        </div>
        <% end %>
        <div class="links">
        <div class="signup w-50 text-center">
        <%- if devise_mapping.registerable? && controller_name != 'registrations' %>
          <%= link_to "Sign up", new_registration_path(resource_name), class:'facebook' %>
        <% end %>
        </div>
        <div class=" text-center w-50">
        <%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
          <%= link_to "Forgot your password?", new_password_path(resource_name), class:'facebook' %>
        <% end %>
        </div>
        </div>
      </div>
      
    </div>
</div>