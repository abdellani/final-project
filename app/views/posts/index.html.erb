<div class="mt-5">
  <div class="col-lg-8 mx-auto">
    <%= render "form", text:'Update post'%>
  </div>
  <div class="col-lg-8 mx-auto">
    <% @posts.each do |p| %>
    <div class="card mb-3">
      <div class="card-header m-0 py-1 row bg-white">
        <div class="col-xs-2 mr-2">
          <%= image_tag p.author.image_link+"?s=50", class:"rounded-circle img-fluid" %>
        </div>
        <div class="col-xs-10 text-left">
          <%= link_to p.author.name, user_path(p.author), class: ''%>
          <br />
          Published : <%= time_ago_in_words p.created_at %> ago
        </div>
      </div>
      <div class="card-body">
        <p class="card-text"><%= p.content %></p>
      </div>
      <div class="card-footer bg-teal py-1 d-flex align-items-center justify-content-between">
      <div>
        <% if p.likes.any? {|like| like.user == current_user}%>
        <%= link_to "",  like_path(id: p.id), 
            method: :delete,class:"fa fa-lg fa-thumbs-up text-dark" %>
        <% else %>
        <%= link_to "", likes_path(id: p.id),
            method: :post,class:"fa fa-lg fa-thumbs-up text-light" %>
        <% end %>
          <div class="d-inline ">
            <% if p.likes.count != 0%>
              <%= p.likes.count %>
              
            <% end %> 
          </div>
        </div>
        <div class="float-right">
          <%= link_to "Comments", post_path(p),class:"btn btn-sm btn-light" %>
          <% if current_user == p.author %>
          <%= link_to "Edit", edit_post_path(p), class:"btn btn-sm btn-light" %>
          <%= link_to "Delete", post_path(p), method: :delete, class:"btn btn-sm btn-danger" %>
          <%end%>
        </div>
      </div>
    </div>
    <% end %>
  </div>
</div>